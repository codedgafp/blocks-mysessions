<div class="block-mysessions">
    {{#sessionscount}}
        {{# hassessioncompleted }}
            <div id="show-completed-session">
                <input type="checkbox" id="input-show-completed-session" name="input-show-completed-session" checked>
                <label for="input-show-completed-session">{{# str }} showcompletedsession, block_mysessions {{/str}}</label>
            </div>
        {{/ hassessioncompleted }}
        {{^ isExternalUser}}
            <div id="enroltosession"><a href="{{ catalogurl }}" class="fr-fi-arrow-right-line">{{# str}}enroltosession, block_mysessions{{/str}}</a></div>
        {{/isExternalUser}}    
    {{/sessionscount}}
    <div class="sessions-grid">
        {{#sessionscount}}
            <div id="sessions-tile" data-sessionscount="{{ sessionscount }}">
                {{> block_mysessions/session-tile }}
            </div>
        {{/sessionscount}}
        {{^sessionscount}}
            <div class="no-sessions-pix">{{# pix }} empty-state, block_mysessions{{/ pix }}</div>
           
            {{#isSearch}}
                {{# isExternalUser}}
                    <div class="no-sessions-message">{{# str}}no_search_result_sessions_external_user, block_mysessions{{/str}}</div>
                {{/isExternalUser}}
                {{^ isExternalUser}}
                    <div class="no-sessions-message">{{# str}}no_search_result_sessions, block_mysessions{{/str}}</div>
                    <div class="no-sessions-enroltosession">
                        <a href="{{ catalogurl }}">{{# str}}no_sessions_enroltosession, block_mysessions{{/str}}</a>
                    </div>
                {{/isExternalUser}}
            {{/isSearch}}
            {{^isSearch}}
                {{# isExternalUser}}
                    <div class="no-sessions-message" style=" margin-bottom: 30px;">{{# str}}no-sessions-message-external_user, block_mysessions{{/str}}</div>
                {{/isExternalUser}}
                {{^ isExternalUser}}
                    <div class="no-sessions-message">{{# str}}no_sessions, block_mysessions{{/str}}</div>
                    <div class="no-sessions-enroltosession">
                        <a href="{{ catalogurl }}">{{# str}}no_sessions_enroltosession, block_mysessions{{/str}}</a>
                    </div>
                {{/isExternalUser}}
            {{/isSearch}}           
        {{/sessionscount}}
    </div>
    {{#sessionscount}}
        <div class="sessions-nav">
            <nav  aria-label="pagination">
                <ul id="mysessions-pagination" class="mentor-pagination"></ul>
            </nav>
        </div>
    {{/sessionscount}}
</div>
