{{#sessions}}
    <a
            class="block-session-tile {{ iscompleted }} {{ nolink }}"
            style="display: none;"
            {{{ courseurl }}}
            tabindex="0"
            title="{{ fullname }}">
        <div class="session-tile-thumbnail">
            <div class="session-tile-thumbnail-size">
                {{{ thumbnail }}}
            </div>
            <div class="session-tile-labels">
                {{{ str_labels }}}
            </div>
        </div>
        <div class="information {{ status }}" data-session-id="{{id}}">
            <h3 class="name {{ css_isopenedregistration }} {{ css_completed }}">
                {{ fullname }}
            </h3>
            <p class="status {{ css_completed }}">
                {{{ statusinformation }}}
            </p>
            <div class="session-more-information" data-training-id="{{trainingid}}" data-session-id="{{id}}">
                {{ str_moreinfotile }} <i class="fr-fi-arrow-right-line" aria-hidden="true"></i>
            </div>
            {{{ inprogressshowprogress }}}
            {{{ favouritebutton }}}
        </div>
    </a>
{{/sessions}}
